    "@types/sharp": "^0.23.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "request-promise-native": "^1.0.8",
    "sharp": "^0.24.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.3",
    "@types/eslint": "^6.1.1",
    "@types/express": "^4.17.1",
    "@types/jest": "^24.0.23",
    "@types/node": "^12.7.8",
    "@types/node-sass": "^4.11.0",
    "@types/shelljs": "^0.8.5",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.3.1",
    "@typescript-eslint/parser": "^2.3.1",
    "chai": "^4.2.0",
    "concurrently": "^5.0.0",
    "eslint": "^6.4.0",
    "jest": "^24.9.0",
    "node-sass": "^7.0.0",
    "nodemon": "^1.19.2",
    "shelljs": "^0.8.3",
    "supertest": "^4.0.2",
